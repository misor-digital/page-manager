{
  "manifest_version": 3,
  "name": "Page Manager",
  "version": "1.0",
  "description": "Chrome extension that opens, reloads and inserts a picture into the open page on each reload",
  "author": "Nikola Angelov",
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "action": {
    "default_icon": {
      "16": "images/icon-16.png",
      "32": "images/icon-32.png",
      "48": "images/icon-48.png",
      "128": "images/icon-128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  }
}