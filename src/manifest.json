{
  "manifest_version": 3,
  "name": "Page Manager",
  "version": "1.0",
  "description": "Chrome extension that opens, reloads and inserts a picture into the open page on each reload",
  "author": "misor.digital@gmail.com",
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    },
    "default_title": "Click to launch Page Manager"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  }
}